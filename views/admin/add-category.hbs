<div class="">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 d-flex align-items-center">
        <div class="card-body p-4 p-lg-5 text-black">
          <div class="">
          </div>
          <form action="/admin/add-category" id="add-category" method="post" enctype="multipart/form-data">
            <div class="d-flex align-items-center mb-3 pb-1">
              <span class="h1 fw-bold mb-0">Add Category</span>
            </div>
            {{#if catAddErr}}
            <p class="text-danger">{{catAddErr}}</p>
            {{/if}}
            <div class="form-outline mb-2">
              <input type="text" name="category" id="category" class="form-control form-control-lg text-capitalize"
                required />
              <label class="form-label" for="category" >Category Name</label>
            </div>
            <div class="pt-1">
              <button class="btn btn-dark btn-lg btn-block" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>