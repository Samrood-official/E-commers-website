    <div class="row">
        <div class="col-lg-9">
            <div class="d-flex">
                <img src="/images/empty-cart.jpg" alt="">
                <h1 class="justify-content-center mt-5 pt-5" style="padding-top: 200px;">Your cart is empty!! <br>
                    <a href="/shop" class="btn btn-dark ">Continue Shopping</a>

                </h1>

            </div>
        </div>
    </div>
</div>
{{/if}}

<script>
    // delete cart item
    function deleteCartItem(proId, cartId) {
        $.ajax({
            url: '/delete-cart-item/' + proId + '/' + cartId,
            method: 'get',
            success: (response) => {
                if (response.status) {
                    swal.fire('Your Item Removed successfully',
                        'You clicked the button!',
                        'success').then(() => {
                            location.reload()
                        })
                }
            }

        })
    }

    //change quantity
    function changeQuantity(cartId, proId, userId, count) {
        const quantity = parseInt(document.getElementById(proId).value)
        const buttons = document.querySelectorAll('.btn-minus, .btn-plus');
        buttons.forEach(button => {
            button.disabled = true; // Disable each button
        });

        count = parseInt(count)
        console.log('changed quandity called')
        $.ajax({
            url: '/change-product-quantity',
            data: {
                cart: cartId,
                product: proId,
                user: userId,
                count: count,
                quantity: quantity
            },
            method: 'post',
            success: (response) => {
                if (response.itemRemoved) {
                    swal.fire({
                        icon: "warning",
                        text: 'product Removed From Cart'
                    }).then(() => {
                        location.reload()
                    })

                } else if (response.noStock) {
                    swal.fire(
                        {
                            icon: "error",
                            text: "Out of Stock"
                        }
                    ).then(() => {
                        location.reload()
                    })
                }
                else if (response.limitStock) {
                    swal.fire(
                        {
                            icon: "error",
                            text: "limit is reached"
                        }
                    ).then(() => {
                        location.reload()
                    })
                }
                else {
                    buttons.forEach(button => {
                        button.disabled = false; // Disable each button
                    });
                    document.getElementById(proId).value = quantity + count
                    document.getElementById('total').innerHTML = response.total
                    document.getElementById('subtotal' + proId).innerHTML = response.cartSubTotal
                }
            }
        })
    }
</script>
