<!-- Products Start -->
<div class="container-fluid pt-5 pb-3">
    <h2 id="featured" class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span
            class="bg-secondary pr-3">Featured
            Products</span></h2>
    <div class="row px-xl-5">
        {{#each products}}

        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
            <div class="product-item bg-light mb-4">
                <div class="product-img position-relative overflow-hidden">
                    <img class="img-fluid w-100" src="product-images/{{this._id}}.jpg" alt="">
                    <div class="product-action">
                        <a class="btn btn-outline-dark btn-square" onclick="addToCart('{{this._id}}')"><i
                                class="fa fa-shopping-cart"></i></a>
                        <a class="btn btn-outline-dark btn-square" id="{{this._id}}"
                            onclick="addTowishlist('{{this._id}}')"><i class="far fa-heart"></i></a>
                        <a class="btn btn-outline-dark btn-square" href="/view-product/{{this._id}}"><i
                                class="fa fa-eye"></i></a>
                        <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                    </div>
                </div>
                <div class="text-center py-4">
                    <a class="h6 text-decoration-none text-truncate" href="">{{this.name}}</a>
                    {{#if this.noStock}}
                    <div class="text-danger font-weight-bold">Out of Stock</div>
                    {{/if}}
                    {{#if this.fewStock}}
                    <h5 class="text-warning font-weight-bold">Only few left</h5>
                    {{/if}}
                    <div class="d-flex align-items-center justify-content-center mt-2">
                        {{#if this.catOfferPercentage}}
                        <h5>{{this.price}}</h5>
                        <h6 class="text-muted ml-2"><del>{{this.actualPrice}}</del></h6>&nbsp; &nbsp;
                        <span
                            class="offer bg-info text-light rounded-circle border border-info">{{this.catOfferPercentage}}%</span>
                        {{else}}
                        <h5>{{this.price}}</h5> &nbsp; &nbsp;
                        {{/if}}

                    </div>
                    <div class="d-flex align-items-center justify-content-center mb-1">
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small>(99)</small>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<!-- Products End -->


