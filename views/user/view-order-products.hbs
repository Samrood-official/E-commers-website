<div class="container-fluid">
    <div class="row px-xl-5 pt-5">
        <div class=" table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>No</th>
                        <th>Products</th>
                        <th>Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {{#each products}}
                    <tr>
                        <td>{{inc @index}}</td>
                        <td class="align-middle">
                            <img src="/product-images/{{this.product._id}}.jpg" alt=""
                                style="width: 100px;">
                                <img src="/product-images/{{this.product._id}}1.jpg" alt=""
                                style="width: 100px;">
                                <img src="/product-images/{{this.product._id}}2.jpg" alt=""
                                style="width: 100px;">
                                <img src="/product-images/{{this.product._id}}3.jpg" alt=""
                                style="width: 100px;"></td>
                        <td class="align-middle">{{this.product.name}}</td>
                        <td class="align-middle">{{this.quantity}}</td>
                        <td class="align-middle">Rs.{{this.product.price}}</td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>