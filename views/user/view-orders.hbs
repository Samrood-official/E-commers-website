<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/">Home</a>
                <a class="breadcrumb-item text-dark" href="/shop">Shop</a>
                <span class="breadcrumb-item active">orders</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

{{#if orderData}}
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
                <div class="col-lg-12 col-md-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                
                <thead class="thead-dark">
                    <tr>
                        <th>No</th>
                        <th>Date</th>
                        <th>Address</th>
                        <th>Pincode</th>
                        <th>Mobile</th>
                        <th>Amount</th>
                        <th>Payment</th>
                        <th>status</th>
                        <th>Products</th>
                        <th>Cancel-Order</th>
                        <th>Invoice</th>
                    </tr>
                </thead>
                {{#each orderData}}
                <tbody class="align-middle bg-light">
                    <tr>
                        <td>{{inc @index}}</td>
                        <td class="align-middle">{{this.date}}</td>
                        <td class="align-middle">{{this.deliverydetails.address1}}</td>
                        <td class="align-middle">{{this.deliverydetails.pincode}}</td>
                        <td class="align-middle">{{this.deliverydetails.mobile}}</td>
                        <td class="align-middle">{{this.totalAmount}}</td>
                        <td class="align-middle ">{{this.paymentMethod}}</td>
                        <td class="align-middle">{{this.status}}</td>

                        <td class="align-middle"><a class="btn btn-dark" href="/view-order-products/{{this._id}}"><i
                                    class="fa fa-eye" aria-hidden="true"></i></a></td>
                        {{#if this.is_Cancelled}}
                        <td class="align-middle">
                            <p class="text-danger font-weight-bold">Cancelled Successfully</p>
                        </td>
                        {{else}}
                        {{#if this.is_delivered}}
                        {{#if this.is_returned}}
                        <td class="align-middle">
                            <p class="text-warning font-weight-bold">Returned Successfully</p>
                        </td>
                        {{else}}
                         <td class="align-middle"><a href="/return-order/{{this._id}}"
                                class="btn btn-success ">Return</a></td>
                        {{/if}}
                       

                        <td class="align-middle"><a href="/invoice/{{this._id}}"
                                class="btn btn-info font-weight-bold">Invoice</a></td>

                        {{else}}
                        
                       
                        <td class="align-middle"><a href="/cancel-order/{{this._id}}"
                                class="btn btn-primary font-weight-bold">Cancel</a></td>
                        {{/if}}
                        {{/if}}
                        


                    </tr>
                    {{/each}}
                </tbody>
            </table>
            
        </div> 
    </div>
</div>
<!-- Cart End -->
{{else}}
<div class="container">
    <div class="row">
        <div class="col-lg-9">
            <div class="d-flex">
                <img src="/images/empty-cart.jpg" alt="">
                <h1 class="justify-content-center mt-5 pt-5" style="padding-top: 200px;">You haven't orederd yet!!!<br>
                    <a href="/" class="btn btn-dark ">Continue Shopping</a>
                </h1>
            </div>
        </div>
    </div>
</div>
{{/if}}